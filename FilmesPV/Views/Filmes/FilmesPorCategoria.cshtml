@model FilmesPV.Models.ViewModel.CategoriaBuscaVM

@{
    ViewData["Title"] = "Create";
}

<h1>Buscar Filmes por Categoria</h1>


<hr />
<div class="row">
    <div class="col-md-4">
         <form enctype="multipart/form-data" asp-action="FilmesPorCategoria">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="CategoriaId" class="control-label"></label>
                <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
            </div>
         
            <div class="form-group">
                <input type="submit" value="Buscar" class="btn btn-primary" />
            </div>
        </form>
  
    </div>
</div>

@{
    if (ViewBag.CategoriaExiste != null && !ViewBag.CategoriaExiste)
    {
                  
     <div >
             Categoria não existe, busque por outra
            </div>
    }
}
<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}


}
